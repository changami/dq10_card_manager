<p id="notice"><%= notice %></p>

<h1>Listing Cards</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Remaining hour</th>
      <th>Own player</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td><%= card.name %></td>
        <td><%= card.remaining_hour %></td>
        <td><%= card.own_player %></td>
        <td class="list_actions"><%= link_to 'Show', card %></td>
        <td class="list_actions"><%= link_to 'Edit', edit_card_path(card) %></td>
        <td class="list_actions"><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

